{
  "apps": [
    {
      "name": "webhook-server",
      "script": "app.js",
      "cwd": "./",
      "watch": true,
      "watch_delay":5000,
      "ignore_watch": ["node_modules", "logs", "public"],
      "max_memory_restart": "1000M",
      "max_restarts": 15,
      "log_date_format": "YYYY-MM-DD HH:mm:ssZ",
      "out_file": "./logs/output.log",
      "error_file": "./logs/error.log",
    }
  ]
}
